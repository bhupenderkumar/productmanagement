<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name="com.xch.vo.User" table="login"> 
   		<id name="uid" column="id" length="45">
   		    <generator class="assigned"/>
   		</id>
        <property name="username" column="name" length="45" />
        <property name="pwd" column="password" length="45"/>
   </class>
</hibernate-mapping>